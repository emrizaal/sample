<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Video", videos_new_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Detail</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @videos.each do |video| %>
         
         <tr>
            <td><%= video.name %></td>
            <td><%= link_to "Link Detail", video %></td>
            <td><%= button_to "Delete",  video, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{video.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>